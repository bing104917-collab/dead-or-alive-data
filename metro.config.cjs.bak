const { getDefaultConfig } = require('expo/metro-config');
const exclusionList = require('metro-config/src/defaults/exclusionList');
const path = require('path');

const config = getDefaultConfig(__dirname);

config.resolver.assetExts.push('onnx', 'txt');

// Block native .node binaries in Metro (not supported in Expo/RN bundling)
config.resolver.blockList = exclusionList([/.*\.node$/]);

// Stub node-only modules to prevent Metro from trying to load them
config.resolver.extraNodeModules = {
  ...(config.resolver.extraNodeModules || {}),
  'onnxruntime-node': path.resolve(__dirname, 'utils/onnxruntime-node-stub.js'),
};

module.exports = config;
